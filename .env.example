# ============================================
# KICKSTORM PROJECT - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# FLASK CONFIGURATION
# ============================================

# Environment: development, production, testing
FLASK_ENV=development

# Secret key for sessions and CSRF (CRITICAL!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here-minimum-32-characters

# ============================================
# DATABASE
# ============================================

# Production: Use PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost/kickstorm
# Development: SQLite (default if not set)
DATABASE_URL=sqlite:///app.db

# ============================================
# AI SERVICES
# ============================================

# OpenAI API Key (REQUIRED for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# EMAIL CONFIGURATION
# ============================================

# SMTP Server settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false

# Email credentials
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@kickstorm.com

# ============================================
# GITHUB OAUTH
# ============================================

# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# GITHUB INTEGRATION (Optional)
# ============================================

# Enable/Disable GitHub repository synchronization
# When enabled, projects can automatically sync code to GitHub
GITHUB_ENABLED=false

# GitHub Personal Access Token (for API access)
# Required if GITHUB_ENABLED=true
# Generate at: https://github.com/settings/tokens
# Required scopes: repo (full control), admin:org (if using organization)
GITHUB_TOKEN=your_github_personal_access_token_here

# GitHub Organization name (where project repositories will be created)
# Leave empty to use your personal account instead
GITHUB_ORG=kickthisuss-projects

# Default repository visibility (true = private, false = public)
GITHUB_DEFAULT_PRIVATE=true

# Optional: Template repository to use when creating new projects
# Format: owner/repo-name (e.g., kickthisuss-projects/project-template)
GITHUB_TEMPLATE=

# ============================================
# RATE LIMITING
# ============================================

# Redis URL for rate limiting (optional, falls back to memory)
REDIS_URL=redis://localhost:6379/0

# ============================================
# CELERY (Required if GitHub enabled)
# ============================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# ============================================
# SECURITY NOTES
# ============================================

# 1. NEVER use default/example values in production
# 2. Generate strong SECRET_KEY with: secrets.token_hex(32)
# 3. Use PostgreSQL or MySQL in production (not SQLite)
# 4. Enable HTTPS and set SESSION_COOKIE_SECURE=true
# 5. Use Redis for rate limiting in production
# 6. Keep .env file permissions restricted (chmod 600)
# 7. Rotate secrets regularly (every 90 days minimum)
